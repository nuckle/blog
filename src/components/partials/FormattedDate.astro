---
interface Props {
	date: Date;
	longMonth?: boolean;
	class?: string;
}

const { date, longMonth, class: className } = Astro.props;
---

<time datetime={date.toISOString()} class:list={[className]}>
	{
		date.toLocaleDateString('en-us', {
			year: 'numeric',
			month: `${longMonth ? 'long' : 'short'}`,
			day: 'numeric',
		})
	}
</time>
